<h1>Available Projects</h1>

<table>
	<thead>
		<th>id</th>
		<th>Title</th>
		<th>Abstact</th>
		<th>Description</th>
		<th>Budget</th>
	</thead>
	<tbody>
		<% @projects.each do |project| %>
			<tr>
				<td><%= project.id %></td>
				<td><%= project.title %></td>
				<td><%= project.abstract %></td>
				<td><%= project.description %></td>
				<td><%= project.budget %></td>
				<td><%= link_to 'Details', project_path(project.id) %></td>
				<td><%= link_to 'Edit', edit_project_path(project.id) %></td>
				<td><%= link_to 'Delete', project_path(project.id), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

